{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "watch": false,
    "lib": ["es2018"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strict": true
  }
}
