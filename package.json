{
  "name": "rpi-sew-client",
  "version": "0.0.1",
  "description": "PIR sensor in RPI",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node build/main.js",
    "start-dev": "cd src && ts-node main.ts --inspect=0.0.0.0:9229",
    "start-watch": "nodemon -L src/main.ts --inspect=0.0.0.0:9229 --exec ts-node",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
    "test": "jest --watchAll",
    "test:coverage": "jest --watchAll --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "test-ci": "jest --collect-coverage",
    "publish-code-coverage": "codecov",
    "validate": "npm run lint && npm run build"
  },
  "author": "juanjo@juanjofp.com, francesco.rivola@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.20.0",
    "aedes": "^0.45.0",
    "eslint": "^7.23.0",
    "eslint-plugin-filenames": "^1.3.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "async-mqtt": "^2.6.1",
    "getmac": "^5.17.0",
    "mqtt": "^4.2.6",
    "onoff": "^6.0.1"
  }
}
